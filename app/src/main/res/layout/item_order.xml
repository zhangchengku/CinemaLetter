<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/movies_img"
            android:layout_width="62dp"
            android:layout_height="87dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="@dimen/margin_top"
            android:background="@drawable/zhanwei1"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="@dimen/margin_top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movies_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拆弹专家"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_big" />

                <TextView
                    android:id="@+id/movies_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top"
                    android:text="3D英语"
                    android:textColor="@color/text_small"
                    android:textSize="12dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="影城："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />


                <TextView
                    android:id="@+id/movies_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杭州滨文路德信影城 3号厅"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场次："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-06-02 20:00"
                    android:textColor="#e7271d"
                    android:textSize="@dimen/text_center" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="座位："
                    android:textColor="@color/text_small"
                    android:textSize="@dimen/text_center" />

                <TextView
                    android:id="@+id/movies_seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6排7座 6排8座"
                    android:textColor="@color/text_big"
                    android:textSize="@dimen/text_center" />
            </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top"
        android:layout_marginTop="@dimen/margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量："
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_center" />

        <TextView
            android:id="@+id/movies_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/text_big"
            android:textSize="@dimen/text_center" />
    </LinearLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/biaoshi"
        android:text="已退票"
        android:background="@drawable/listitemt"
        android:textColor="#eb5e3a"
        android:textSize="11dp"
        android:gravity="center"
        android:layout_width="50dp"
        android:layout_height="23dp" />
</LinearLayout>

           

        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d9d9d9" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_top"
            android:text="订单号：2202151556555555"
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_small"
            android:visibility="gone" />
        <TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_top"
            android:text="总价: ¥"
            android:textColor="@color/text_small"
            android:textSize="@dimen/text_small" />


    </RelativeLayout>

</LinearLayout>