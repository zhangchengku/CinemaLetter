<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg01"
    android:orientation="vertical">
    <include layout="@layout/header_layout02" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="146dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="73dp"
            android:layout_height="79dp"
            android:background="@drawable/zhifuchenggong" />
        <TextView
            android:id="@+id/teeee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:text="订单支付成功！"
            android:textColor="@color/text_big"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp">
        <Button
            android:id="@+id/back_home"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="34dp"
            android:layout_weight="1"
            android:background="@drawable/button_bule"
            android:text="返回首页"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <Button
            android:id="@+id/order_message"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginRight="28dp"
            android:layout_weight="1"
            android:background="@drawable/button_yello"
            android:text="充值记录"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>